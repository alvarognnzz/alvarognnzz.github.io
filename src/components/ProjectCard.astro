---
const { image, title, description } = Astro.props;
---

<div class="border-[#252627] border-[1px] w-[400px] rounded-xl bg-[#0e0e0e]">
  <div class="p-6">
    <img src={image.src} alt="">
    <p class="text-2xl pt-4 font-semibold">{title}</p>
    <p class="pt-2 text-[#abafb4]">{description}</p>
  </div>
</div>
