---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import ProjectCard from "../components/ProjectCard.astro";
import Icon from "../components/Icon.astro";
---

<Layout title="alvarognnzz - Indie developer">
    <main class="mx-[12%] mt-[128px]">
        <section
            class="flex flex-col xl:flex-row xl:justify-between items-center xl:text-left text-center"
        >
            <div>
                <h1
                    class="text-4xl sm:text-6xl md:text-7xl font-horizon text-shadow-red"
                >
                    alvaro
                    gnnzz
                </h1>
                <h2 class="sm:text-[18px] mt-[8px]">
                    indie developer in Spain ðŸ‡ªðŸ‡¸
                </h2>
            </div>
            <img src="/images/alvarognnzz.png" alt="alvarognnzz" class="rounded-3xl mt-10 sm:mt-0 w-[400px]" />
        </section>
        <section class="mt-[200px] xl:mt-[356px]">
            <Title color="blue">projects</Title>
            <div class="mt-5 flex flex-wrap justify-center md:justify-start gap-12">
                <ProjectCard
                    imgSrc="/images/godot-asset-collection.png"
                    imgAlt="Godot 4 assets"
                    title="Godot asset collection"
                    description="Collection of assets for creating FPS controllers using Godot 4. The collection is open source and available on GitHub."
                    url="https://github.com/alvgonzx/Godot-Prototyping-FPS-Controller"
                />
                <ProjectCard
                    imgSrc="/images/pit-stop-assemble.png"
                    imgAlt="Pit Stop Assemble"
                    title="Pit Stop Assemble"
                    description="A short game for the Godot Game Jam 3. Assemble and fix racing cars in the pit stop! Playable on itch.io"
                    url="https://alvarognnzz.itch.io/pit-stop-assemble"
                />
                <ProjectCard
                    imgSrc="/images/skibidi-lang.png"
                    imgAlt="Skibidi Lang"
                    title="skibidi-lang"
                    description="Interpreted language using brainrot words of tiktok as syntax. Made in Python."
                    url="https://github.com/alvgonzx/skibidi-lang"
                />
            </div>
        </section>
        <section class="mt-[128px]">
            <Title color="orange">TECH</Title>
            <div class="mt-5 flex justify-center md:justify-start items-center flex-wrap gap-8">
                <Icon imgSrc="/images/html.png" imgAlt="HTML logo" />
                <Icon imgSrc="/images/css.png" imgAlt="CSS logo" />
                <Icon imgSrc="/images/js.png" imgAlt="JS logo" />
                <Icon imgSrc="/images/tailwind.png" imgAlt="Tailwind logo" />
                <Icon imgSrc="/images/astro.png" imgAlt="Astro logo" />
                <Icon imgSrc="/images/nodejs.png" imgAlt="NodeJS logo" />
                <Icon imgSrc="/images/python.png" imgAlt="Python logo" />
                <Icon imgSrc="/images/godot.png" imgAlt="Godot logo" />
                <Icon imgSrc="/images/git.png" imgAlt="Git logo" />
            </div>
        </section>
        <footer>
            <h1 class="text-xl font-horizon text-shadow-green text-center mt-[128px] mb-5">
                built by alvarognnzz
            </h1>
        </footer>
    </main>
</Layout>

<style is:global>
    @import url("https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap");
    @font-face {
        font-family: "Horizon";
        src: url("/fonts/horizon.otf") format("otf");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    .text-shadow-red {
        text-shadow: -3px -3px #b74f6f;
    }

    .text-shadow-blue {
        text-shadow: -2px -2px #3185fc;
    }

    .text-shadow-orange {
        text-shadow: -2px -2px #d08c3c;
    }

    .text-shadow-green {
        text-shadow: -2px -2px #539e43;
    }

    .text-shadow-pink {
        text-shadow: -2px -2px #A944BA;
    }

    
    @media screen and (max-width: 640px) {
        .text-shadow-red {
            text-shadow: -2px -2px #b74f6f;
        }
    }
</style>
